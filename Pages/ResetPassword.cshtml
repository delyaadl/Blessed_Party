@page "{email}/{token}"
@model Blessed_Party.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}


<div id="changePassword-container">
    <form id="reset-page" asp-page-handler="Reset" method="post" class="m-5">


        <div class="row">
            <div class="col">
                <label style="font-weight:bold; font-size:24pt;">Reset Password</label>
            </div>
        </div>

        @if (TempData["Message"] != null)
        {
            <div class="row">
                <div class="col-lg-12">
                    <label style="color:red">@TempData["Message"]</label>
                </div>
            </div>
        }

        <div class="row mt-3">
            <div class="col-sm-4">
                <div class="form-group">
                    <label>Password Baru <span style="color:red">*</span></label>
                    <input type="password" class="form-control" id="new_password" name="new_password" placeholder="New Password" required>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="form-group">
                    <label>Konfirmasi Password Baru <span style="color:red">*</span></label>
                    <input type="password" class="form-control" id="confirm_password" name="cpassword" placeholder="Confirm Password" required>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <input type="submit" value="Reset" class="btn btn-success text-white" />
            </div>
        </div>
    </form>
</div>

